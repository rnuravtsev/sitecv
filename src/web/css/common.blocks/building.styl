.building
  &__wrap
    position relative
    padding-left .5px
    padding-right .5px
    padding-bottom 1px
  &__title
    margin-bottom 65px
  &__link
    position relative
    display flex
    justify-content center
    &:before
      content ''
      position absolute
      top 0
      bottom 0
      display block
      width 100%
      background-image linear-gradient(0deg, rgba(59, 178, 116, 0.8) 0%, rgba(0,0,0,0) 55%)
      z-index 2
    &:hover
      &:before
        display none
      & .building__text
          display none
  &__img
    position relative
    width 100%
    max-width 400px
    z-index 1
  &__text
    position absolute
    bottom 0
    margin-left auto
    margin-right auto
    font-size 16px
    font-weight 700
    text-transform uppercase
    color $white
    opacity .9
    z-index 2

@media (max-width 575.98px)
  .building
    &__title
      font-size 24px !important