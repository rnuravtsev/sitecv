.slick-arrow:before
	content ""
	opacity 0.6
	background-image: url(/assets/templates/images/base/icon-arrow_back.svg)
	width 40px
	height 60px
	display block
	background-repeat no-repeat
	background-position center

.slick-next:before
	-webkit-transform rotate(180deg)
	-moz-transform rotate(180deg)
	-ms-transform rotate(180deg)
	-o-transform rotate(180deg)
	transform rotate(180deg)

.slick-prev
	left 0

.slick-next
	right 0

.slick-disabled
  display none

