.slick-dots
	bottom 50px
	left 100px
	width auto
	& li
		width 50px
		height 4px
		margin 0 3px
		&:first-child
			margin-left 0
		&:last-child
			margin-right 0
		&.slick-active button:before
			background-color $primary
		& button
			padding 0
			width 50px
			height 4px
			background-color $primary-active
			&:before
				content ''
				width 50px
				height 4px
				display block
			&:after
				content ''
				position absolute
				padding 10px
				display block
				width 100%
				top -8px

@media (max-width 1199.98px)
	.slick-dots
		left 80px
		bottom 30px
		& li
			width 40px
			& button
				width 40px
				&:before
					width 40px

@media (max-width: 991.98px)
	.slick-arrow
	.slick-arrow:before
		width 30px
	.slick-dots
		bottom 30px
		& li
			width 30px
			& button
				width 30px
				&:before
					width 30px
					bottom 0

	.slick-arrow
		margin-top -13px
		margin-left: -30px

@media (max-width 767.98px)
	.slick-dots
		bottom -30px
		left auto
		width 100%
		li
			margin 0 5px

