.contacts
  &__title
    margin-bottom 65px
  &__subtitle
    font-weight 700
  &__box
    position relative
    z-index 3
  &__wrap
    display flex
    align-items center
  &__link
    color $white
  &__yamap
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    border 0
    background-image url("../images/base/map.png")
    background-size contain
    background-repeat no-repeat
    z-index 1
  &__after
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 2



@media(max-width 1199.98px)
  .contacts
    &__link
      font-size 14px
@media(max-width 991.98px)
  .contacts
    &__wrap
      justify-content flex-end
@media(max-width 767.98px)
  .contacts
    &_map
      padding-bottom 170px
    &__link
      font-size 14px
    &__box
      top 170px
    &__yamap
    &__after
      height 70%