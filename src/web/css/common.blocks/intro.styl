.intro
  color $white
  &__wrap
    &_py-150
      padding-top 140px
      padding-bottom 150px
    &_absolute
      position absolute
      left -18%
    &_pl
      padding-left 25%
  &__title
    text-transform uppercase
    font-size 70px
    line-height 1.4
    font-weight 100
    &_supreme
      font-weight 700
  &__text
    font-size 30px
  &__icon
    font-size 17px
    height 17px
    transition $animation
  &__link
    &:hover
      .intro__icon
        color $primary !important

@media(max-width 1199.98px)
  .intro
    &__title
      font-size 54px
      line-height 1.2
    &__text
      font-size 25px
@media(max-width 991.98px)
  .intro
    &__title
      font-size 45px
    &__text
      font-size 22px
    &__wrap
      &_absolute
        position relative
        left 0
      &_pl
        padding-left 0
    &__icon
      font-size 15px
      height 15px

@media(max-width 767.98px)
  .intro
    &__title
      font-size 36px
    &__text
      font-size 20px
    &__icon
      font-size 12px
      height 12px