.requisites
  &__title
    margin-bottom 45px
  &__text
    text-align center
  &__subtitle
    margin-top 50px
    margin-bottom 10px
    font-size 24px
    font-weight 600
    text-transform uppercase
    text-align center
  &__item
    display flex
    margin-bottom 7px
  &__type
    margin-bottom 0
    font-size 16px
    font-weight 600
    text-transform uppercase
  &__value
    font-weight 400

@media(max-width 767.98px)
  .requisites
    &__type
      font-size 14px
    &__value
      font-size 13px
    &__btn
      display flex
      flex-direction column
      align-items center
      justify-content center
      margin 0 auto
      background-color #0000
      border 0
    & .stash-md
      height 90px
@media(max-width 359.98px)
  .requisites
    &__value
      font-size 11px