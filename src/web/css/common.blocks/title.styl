.title-section
  position relative
  margin-left auto
  margin-right auto
  width max-content
  font-size 48px
  font-weight 300
  text-transform uppercase
  text-align center
  &_lines
    &:before
      content ''
      position absolute
      top 30px
      left -140px
      display block
      width 120px
      height 1px
      background-color $gray
    &:after
      content ''
      position absolute
      top 30px
      right -140px
      display block
      width 120px
      height 1px
      background-color $gray

@media (max-width 1199.98px)
  .title-section
    font-size 42px

@media(max-width 991.98px)
  .title-section
    font-size 36px
    &_lines
      &:before
        top 22px
      &:after
        top 22px

@media (max-width: 767.98px)
  .title-section
    font-size 26px
    &_lines
      &:before
        display none
      &:after
        display none
