.social
  display flex
  align-items center
  &__title
    margin-bottom 0
    font-size 16px
    font-weight 600
    color $white
    text-transform uppercase
  &__list
    display flex
    flex-wrap wrap
    align-items center
  &__item
    margin-right: 12px
    &:last-child
      margin-right: 0
  &__link
    display flex
    justify-content center
    align-items center
    color $white
  &__icon
    color $white
    &:hover
    &:focus
    &:active
      color $primaryh

@media(max-width 1199.98px)
  .social
    &__title
      font-size 14px
    &__icon
      font-size 22px
      height 22px
