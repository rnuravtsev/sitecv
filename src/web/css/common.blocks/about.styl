.about
  &__title
    margin-bottom 35px
  &__subtitle
    margin-bottom 10px
    display flex
    justify-content center
    align-items center
    font-size 24px
    font-weight 600
    text-transform uppercase
  &__icon
    margin-right 5px
    font-size 24px !important
    height 24px !important
  &__text
    margin-bottom 40px
    text-align center
  &__link
    display flex
    justify-content center
    align-items center
    font-weight 600

@media(max-width 1199.98px)
  .about
    &__title
      &:before
        left 23%
      &:after
        right 23%

@media(max-width 991.98px)
  .about
    &__title
      left 0

@media (max-width 767.98px)
  .about
    &__title
      &:before
        left 28%
      &:after
        right 28%
    &__subtitle
      font-size 20px
    &__icon
      font-size 20px !important
      height 20px !important
    &__text
      margin-bottom 20px
      font-size 14px
    &__btn
      display flex
      flex-direction column
      align-items center
      margin 0 auto
      background-color #0000
      border 0
    &__link
      justify-content start
